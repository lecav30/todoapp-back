{
  "name": "todoapp-back",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "start": "bun run dist/index.js",
    "build": "tsc --noEmit false",
    "lint": "tsc --noEmit",
    "migrate": "sequelize-cli db:migrate --migrations-path dist/src/migrations",
    "migration:generate": "sequelize-cli migration:generate --migrations-path src/migrations",
    "migrate:undo": "sequelize-cli db:migrate:undo --migrations-path src/migrations",
    "seed": "sequelize-cli db:seed:all --seeders-path src/seeders",
    "seed:undo": "sequelize-cli db:seed:undo --seeders-path src/seeders"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/bun": "latest",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "pg": "^8.16.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.7",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "sequelize-cli": "^6.6.3"
  }
}
